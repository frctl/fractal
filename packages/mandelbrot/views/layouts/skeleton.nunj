<!DOCTYPE html>
<html lang="en" class="no-js">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="shortcut icon" type="image/x-icon" href="/favicon.ico">

    <script>var cl = document.querySelector('html').classList; cl.remove('no-js'); cl.add('has-js');</script>

    <link rel="stylesheet" type="text/css" href="/_theme/css/build.css?cachebust={{ frctl.web.theme.version }}">

    <title>{% if pageTitle %}{{ pageTitle }} | {% endif %}{{ frctl.config.project.title }}</title>
</head>
<body>

{% block page %}{% endblock %}

<script src="/_theme/js/build.js"></script>

{% if frctl.web.server %}
<script src="{{ frctl.web.server.socketAddress }}/socket.io/socket.io.js"></script>
<script>
var socket = io.connect('{{ frctl.web.server.socketAddress }}');
socket.on('changed', function (data) {
    document.location.reload(true);
});
</script>
{% endif %}
</body>
</html>
