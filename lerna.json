{
  "lerna": "2.4.0",
  "version": "2.0.0-beta.4",
  "npmClient": "yarn",
  "npmClientArgs": [
    "--production",
    "--no-optional"
  ],
  "packages": [
    "packages/**/*"
  ],
  "commands": {
    "publish": {
      "npmTag": "beta",
      "allowBranch": "v2",
      "ignore": [
        "test/**",
        "cli/test/**"
      ]
    },
    "bootstrap": {
      "hoist": true
    }
  }
}
